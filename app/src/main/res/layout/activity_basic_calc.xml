<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basicCalc">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bcl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addNumb"
                android:text="C" />

            <Button
                android:id="@+id/bd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="operacje"
                android:text="/" />

            <Button
                android:id="@+id/bm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="operacje"
                android:text="*" />

            <Button
                android:id="@+id/bdel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addNumb"
                android:text="DEL" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/b7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addNumb"
                android:text="7" />

            <Button
                android:id="@+id/b8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addNumb"
                android:text="8" />

            <Button
                android:id="@+id/b9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addNumb"
                android:text="9" />

            <Button
                android:id="@+id/bmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="operacje"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addNumb"
                android:text="4" />

            <Button
                android:id="@+id/b5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addNumb"
                android:text="5" />

            <Button
                android:id="@+id/b6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addNumb"
                android:text="6" />

            <Button
                android:id="@+id/bdod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="operacje"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addNumb"
                android:text="1" />

            <Button
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addNumb"
                android:text="2" />

            <Button
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addNumb"
                android:text="3" />

            <Button
                android:id="@+id/bkrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addNumb"
                android:text="." />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/b0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addNumb"
                android:text="0" />

            <Button
                android:id="@+id/brow"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:onClick="operacje"
                android:text="=" />
        </TableRow>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>