<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:gravity="center_horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Wyswietlacz"
        android:textSize="24sp"/>
    //nierzad
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/bclr"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="C"
            android:onClick="delMethod"/>
        <Button
            android:id="@+id/bcdziel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="/"
            android:onClick="operacjeAdv"/>
        <Button
            android:id="@+id/btmnoz"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="*"
            android:onClick="operacjeAdv"/>
        <Button
            android:id="@+id/btdel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="del"
            android:onClick="delMethod"/>
        <Button
            android:id="@+id/btsin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="sin"
            android:onClick="singleOprts"/>
    </TableRow>
    //2rzad
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/bt7"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="7"
            android:onClick="addNumbAdv"/>
        <Button
            android:id="@+id/bt8"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="8"
            android:onClick="addNumbAdv"/>
        <Button
            android:id="@+id/bt9"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="9"
            android:onClick="addNumbAdv"/>
        <Button
            android:id="@+id/btmin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="-"
            android:onClick="operacjeAdv"/>
        <Button
            android:id="@+id/btcos"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="cos"
            android:onClick="singleOprts"/>
    </TableRow>
    //3rzad
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/bt4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="4"
            android:onClick="addNumbAdv"/>
        <Button
            android:id="@+id/bt5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="5"
            android:onClick="addNumbAdv"/>
        <Button
            android:id="@+id/bt6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="6"
            android:onClick="addNumbAdv"/>
        <Button
            android:id="@+id/btplus"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="+"
            android:onClick="operacjeAdv"/>
        <Button
            android:id="@+id/bttan"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="tan"
            android:onClick="singleOprts"/>
    </TableRow>
    //4rzad
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/bt1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="1"
            android:onClick="addNumbAdv"/>
        <Button
            android:id="@+id/bt2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="2"
            android:onClick="addNumbAdv"/>
        <Button
            android:id="@+id/bt3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="3"
            android:onClick="addNumbAdv"/>
        <Button
            android:id="@+id/btkrop"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="."
            android:onClick="addNumbAdv"/>
        <Button
            android:id="@+id/btx2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="x^2"
            android:onClick="singleOprts"/>
    </TableRow>
    //5rzad
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/bt0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:onClick="addNumbAdv"/>

        <Button
            android:id="@+id/btrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:onClick="operacjeAdv"/>

        <Button
            android:id="@+id/bt00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:onClick="addNumbAdv"/>
        <Button
            android:id="@+id/btsqrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sqrt"
            android:onClick="singleOprts"/>
        <Button
            android:id="@+id/btlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="log"
            android:onClick="singleOprts"/>
    </TableRow>

</LinearLayout>